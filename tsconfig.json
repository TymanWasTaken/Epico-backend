{
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
		"module": "commonjs",
		"target": "ESNext",
		"outDir": "dist",
		"lib": [
			"ESNext",
			"ESNext.Array",
			"ESNext.AsyncIterable",
			"ESNext.Intl",
			"ESNext.Symbol"
		],
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"incremental": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"paths": {
			"@routes/*": ["src/routes/*"]
		}
	},
	"include": ["src/**/*", "src/*"],
	"exclude": ["dist"]
}